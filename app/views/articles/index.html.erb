<h2>Listing articles</h2>

<table class="table table-bordered">
 <tr>
  <th>Title</th>
  <th>Text</th>
 </tr>

 <% @articles.each do |article| %>
  <tr>
   <td><%= article.title %></td>
   <td><%= article.text %></td>
   <td><%= link_to 'Show', article_path(article), :class => 'btn btn-info' %></td>
   <td><%= link_to 'Edit', edit_article_path(article), :class => 'btn btn-info' %></td>
   <td><%= link_to 'Delete', article_path(article),
	method: :delete,
	data: { confirm: 'Are you sure?' }, :class => 'btn btn-info' %></td>
  </tr>
 <% end %>

</table>
<br>
<%= link_to 'Home', root_path, :class => 'btn btn-info' %>
